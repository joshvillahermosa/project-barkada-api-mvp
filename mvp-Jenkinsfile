node {
    nvm(nvmInstallURL: 'https://raw.githubusercontent.com/creationix/nvm/v0.33.2/install.sh', nvmIoJsOrgMirror: 'https://iojs.org/dist', nvmNodeJsOrgMirror: 'https://nodejs.org/dist', version: '8.8.1') {
        stage('Install') {
            checkout scm
            sh 'npm install'
        }

        stage('Test') {
            sh 'npm run test'
        }
    }

    stage('Deploy') {
        sh 'barkda-api-mvp'
    }
}
